@model List<DailyApartmentsMVC.Models.OwnerModel.PropertyListOwner>
@{
    ViewData["Title"] = "My properties";
}


<!-- ================ ACTIVATION/DEACTIVATION TOAST ================ -->
@if (TempData.ContainsKey("Deactivated") && TempData["Deactivated"] is bool deactivated)
{
    <div id="toast-container" class="toast show" role="alert" aria-live="assertive" aria-atomic="true" data-delay="0" data-autohide="false">
        <div class="toast-header @(deactivated ? "bg-info" : "bg-success")">
            <strong class="me-auto" style="color: #FFF;">Ви @(deactivated ? "деактивували" : "активували") оголошення!</strong>
            <button type="button" class="btn-close ms-2 mb-1" data-bs-dismiss="toast" aria-label="Close">
                <span aria-hidden="true"></span>
            </button>
        </div>
        <div class="toast-body bg-light">
            @if (deactivated)
            {
                <span>
                    Ваше оголошення переміщено до архіву
                </span>
            }
            else
            {
                <span>
                    Ваше оголошення тепер активне
                </span>
            }
        </div>
    </div>
}

@if (TempData.ContainsKey("Edited") && TempData["Edited"] is bool edited)
{
    <div id="toast-container" class="toast show" role="alert" aria-live="assertive" aria-atomic="true" data-delay="0" data-autohide="false">
        <div class="toast-header bg-info" )">
            <strong class="me-auto" style="color: #FFF;">Ви редактували оголошення!</strong>
            <button type="button" class="btn-close ms-2 mb-1" data-bs-dismiss="toast" aria-label="Close">
                <span aria-hidden="true"></span>
            </button>
        </div>
        <div class="toast-body bg-light">
            Зміни вступлять в силу найближчим часом.
        </div>
    </div>
}

<script>
    $(function () {
        $('.toast').toast('show');
    });
</script>


@if (Model.Count() > 0)
{

    <!-- ================ Navigation Tabs Section ================ -->
    <ul class="nav nav-tabs mt-5" role="tablist">
        <li class="nav-item" role="presentation">
            <a class="nav-link active" data-bs-toggle="tab" href="#activeProperties" aria-selected="true" role="tab">Активні</a>
        </li>
        <li class="nav-item" role="presentation">
            <a class="nav-link" data-bs-toggle="tab" href="#archiveProperties" aria-selected="false" tabindex="-1" role="tab">Архів</a>
        </li>
    </ul>

    <!-- ================ Properties ================ -->
    <div id="myTabContent" class="tab-content">

        <!-- ================ ACTIVE PROPERTIES ================ -->
        <div class="tab-pane fade show active" id="activeProperties" role="tabpanel">
            @foreach (var p in Model)
            {
                if ((p.Verified ?? false) && (p.Active ?? false))
                {
                    <div class="container mt-3" style="background: #FFF;">
                        <div class="row">

                            <div class="col-3 px-4 py-3 d-flex align-items-center">
                                @if (p.PhotoLinks.Count() > 0)
                                {
                                    <img class="img-thumbnail width="50" src="@p.PhotoLinks[0]" />
                                }
                            </div>

                            <div class="col-6 py-3 px-3 ">

                                <div style="display: flex; flex-direction: column; justify-content: space-between; min-height: 100%;">
                                    <div></div>
                                    <div class="h-50">
                                        <h4>@p.Title</h4>
                                        <p class="mt-3" style="margin-bottom: 0;">@p.Description</p>
                                    </div>
                                    <div>
                                        <p class="@(p.BookingsCount == 0 ? "text-primary" : "text-success")">Заявок на бронювання: @p.BookingsCount</p>
                                        <p class="text-muted" style="margin-bottom: 0;">
                                            @p.PublicationDate?.ToString("D") - @p.Country, @p.City
                                        </p>
                                    </div>
                                </div>

                            </div>

                            <div class="col-3 px-5 py-3 d-flex flex-column justify-content-center">
                                <div>
                                    <a class="btn py-1 btn-primary w-100" data-bs-toggle="modal" data-bs-target="@($"#details_{p.Id}")">Деталі</a>

                                    <div class="modal fade" id="@($"details_{p.Id}")" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">

                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="exampleModalLabel">Деталі</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>

                                                <div class="modal-body">

                                                    <div class="form-group mb-3">
                                                        <label>Назва</label>
                                                        <input type="text" class="form-control fw-semibold text-black" readonly value="@p.Title" />
                                                    </div>

                                                    <div class="form-group mb-3">
                                                        <label>Опис</label>
                                                        <textarea class="form-control w-100" rows="4" readonly>@p.Description</textarea>
                                                    </div>

                                                    <div class="form-group mb-3">
                                                        <label>Місцезнаходження</label>
                                                        <input type="text" class="form-control" readonly value="@p.Country, @p.City, @p.Street @p.House, @p.Flat" />
                                                    </div>

                                                    <div class="form-group mb-3 d-flex justify-content-between">
                                                        <div>
                                                            <label>Кількість кімнат</label>
                                                            <input type="number"
                                                       readonly
                                                       class="form-control"
                                                       value="@p.RoomNumber">
                                                        </div>
                                                        <div>
                                                            <label>Спальних місць</label>
                                                            <input type="number"
                                                       readonly
                                                       class="form-control"
                                                       value="@p.SleepingPlaceNumber">
                                                        </div>
                                                    </div>

                                                    <div class="form-group mb-3 d-flex justify-content-between">
                                                        <div>
                                                            <label>Вартість</label>
                                                            <input type="text"
                                                       readonly
                                                       class="form-control fw-semibold"
                                                       value="$ @p.Price">
                                                        </div>
                                                        <div>
                                                            <label>Мінімально днів</label>
                                                            <input type="number"
                                                       readonly
                                                       class="form-control"
                                                       value="@p.MinRentalDays">
                                                        </div>
                                                    </div>

                                                    <div>
                                                        <label>Дата публікації</label>
                                                        <input type="text"
                                                   readonly
                                                   class="form-control"
                                                   value="@p.PublicationDate?.ToString("D")">
                                                    </div>


                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Назад</button>
                                                        <a class="btn btn-info" asp-action="EditProperty" asp-route-id="@p.Id">Редагувати</a>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    </div>

                                </div>

                                @if (p.BookingsCount > 0)
                                {
                                    <div>
                                        <a class="btn py-1 btn-success w-100 mt-3">Заявки</a>
                                    </div>
                                }
                                <div>

                                    <a class="btn py-1 btn-info w-100 mt-3" data-bs-toggle="modal" data-bs-target="@($"#deactivate{p.Id}")">Деактивувати</a>

                                    <div class="modal fade" id="@($"deactivate{p.Id}")" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">

                                                <form method="post" asp-action="DeactivateProperty" asp-route-id="@p.Id">

                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="exampleModalLabel">Деактивація</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                    </div>

                                                    <div class="modal-body">

                                                        <p>Ви дійсно бажаєте деактивувати оголошення?</p>

                                                    </div>

                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Назад</button>
                                                        <button type="submit" class="btn btn-danger">Деактивувати</button>
                                                    </div>

                                                </form>

                                            </div>
                                        </div>
                                    </div>

                                </div>

                            </div>
                        </div>

                    </div>
                }
            }
        </div>

        <!-- ================ ARCHIVE PROPERTIES ================ -->
        <div class="tab-pane fade" id="archiveProperties" role="tabpanel">
            @foreach (var p in Model)
            {
                if (!(p.Verified ?? false) || !(p.Active ?? false))
                {
                    <div class="container mt-3" style="background: #FFF;">
                        <div class="row">

                            <div class="col-3 px-4 py-3 d-flex align-items-center">
                                <img class="img-thumbnail width="50" src="@p.PhotoLinks[0]" />
                            </div>

                            <div class="col-6 py-3 px-3 ">


                                <div style="display: flex; flex-direction: column; justify-content: space-between; min-height: 100%;">
                                    <div>
                                        @if (p.Verified == null)
                                        {
                                            <a class="text-danger text-sm-start" data-toggle="tooltip" title="Модератор верифіковує ваше оголошення">Оголошення розглядається</a>

                                            <script>
                                                $(document).ready(function () {
                                                    $('[data-toggle="tooltip"]').tooltip();
                                                });
                                            </script>
                                        }
                                    </div>
                                    <div class="h-50">
                                        <h4>@p.Title</h4>
                                        <p class="mt-3" style="margin-bottom: 0;">@p.Description</p>
                                    </div>
                                    <div>

                                        <p class="text-muted mt-3" style="margin-bottom: 0;">
                                            @p.PublicationDate?.ToString("D") - @p.Country, @p.City
                                        </p>
                                    </div>
                                </div>

                            </div>

                            <div class="col-3 px-5 py-3 d-flex flex-column justify-content-center">
                                <div>
                                    <a class="btn py-1 btn-primary w-100" data-bs-toggle="modal" data-bs-target="@($"#details_{p.Id}")">Деталі</a>

                                    <div class="modal fade" id="@($"details_{p.Id}")" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">

                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="exampleModalLabel">Деталі</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>

                                                <div class="modal-body">

                                                    <div class="form-group mb-3">
                                                        <label>Назва</label>
                                                        <input type="text" class="form-control fw-semibold text-black" readonly value="@p.Title" />
                                                    </div>

                                                    <div class="form-group mb-3">
                                                        <label>Опис</label>
                                                        <textarea class="form-control w-100" rows="4" readonly>@p.Description</textarea>
                                                    </div>

                                                    <div class="form-group mb-3">
                                                        <label>Місцезнаходження</label>
                                                        <input type="text" class="form-control" readonly value="@p.Country, @p.City, @p.Street @p.House, @p.Flat" />
                                                    </div>

                                                    <div class="form-group mb-3 d-flex justify-content-between">
                                                        <div>
                                                            <label>Кількість кімнат</label>
                                                            <input type="number"
                                                       readonly
                                                       class="form-control"
                                                       value="@p.RoomNumber">
                                                        </div>
                                                        <div>
                                                            <label>Спальних місць</label>
                                                            <input type="number"
                                                       readonly
                                                       class="form-control"
                                                       value="@p.SleepingPlaceNumber">
                                                        </div>
                                                    </div>

                                                    <div class="form-group mb-3 d-flex justify-content-between">
                                                        <div>
                                                            <label>Вартість</label>
                                                            <input type="text"
                                                       readonly
                                                       class="form-control fw-semibold"
                                                       value="$ @p.Price">
                                                        </div>
                                                        <div>
                                                            <label>Мінімально днів</label>
                                                            <input type="number"
                                                       readonly
                                                       class="form-control"
                                                       value="@p.MinRentalDays">
                                                        </div>
                                                    </div>

                                                    <div>
                                                        <label>Дата публікації</label>
                                                        <input type="text"
                                                   readonly
                                                   class="form-control"
                                                   value="@p.PublicationDate?.ToString("D")">
                                                    </div>


                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Назад</button>
                                                        <a class="btn btn-info" asp-action="EditProperty" asp-route-id="@p.Id">Редагувати</a>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    </div>

                                </div>

                                <div>
                                    @if (p.Verified == true)
                                    {
                                        <a class="btn py-1 btn-success w-100 mt-3" data-bs-toggle="modal" data-bs-target="@($"#activate{p.Id}")">Активувати</a>
                                    }

                                    <div class="modal fade" id="@($"activate{p.Id}")" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">

                                                <form method="post" asp-action="ActivateProperty" asp-route-id="@p.Id">

                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="exampleModalLabel">Активація</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                    </div>

                                                    <div class="modal-body">

                                                        <p>Ви дійсно бажаєте активувати оголошення?</p>

                                                    </div>

                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Назад</button>
                                                        <button type="submit" class="btn btn-success">Активувати</button>
                                                    </div>

                                                </form>

                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>

                    </div>
                }
            }
        </div>

    </div>
}
else
{
    <h3 class="mt-5 text-center">У вас поки що немає жодного оголошення</h3>
    <a asp-action="AddProperty" class="link-primary ">
        <h5>Створити</h5>
    </a>
}

