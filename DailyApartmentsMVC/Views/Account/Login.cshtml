@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="h-100 h-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-8 col-xl-6">
                <div class="card rounded-3">
                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/img3.webp"
                         class="w-100" style="border-top-left-radius: .3rem; border-top-right-radius: .3rem;"
                         alt="Sample photo">
                    <div class="card-body p-4 p-md-5">
                        <h3 class="mb-2 pb-2 pb-md-0 mb-md-2 px-md-2">Вхід</h3>

                        <form asp-action="Login" method="post" class="px-md-2">

                            <div class="form-outline">
                                                               
                                <div class="form-group">
                                    <input type="text" class="form-control" id="UserName" name="UserName" required>
                                    <label class="form-label" for="UserName">Логін</label>
                                </div>

                                <div class="form-group mb-2">
                                    <input type="password" class="form-control" id="Password" name="Password" required>
                                    <label class="form-label" for="Password">Пароль</label>
                                </div>

                                <fieldset class="form-group mb-4 mt-4">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="isPO" name="isPropertyOwner">
                                        <label class="form-check-label" for="flexCheckDefault">
                                            Я власник квартири
                                        </label>
                                    </div>
                                </fieldset>

                            </div>
                                             
                            @Html.ValidationSummary(true, "", new { @class = "text-danger mb-2" })

                            <button type="submit" class="btn btn-success btn-lg mb-1 w-100 mt-4">Увійти</button>

                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
